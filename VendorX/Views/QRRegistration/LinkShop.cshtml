@using VendorX.ViewModels
@model QRCustomerRegistrationViewModel
@{
    ViewData["Title"] = "Link to Shop";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="bi bi-link-45deg"></i> Link Your Account
                    </h3>
                </div>
                <div class="card-body p-4">
                    <!-- Shop Information -->
                    <div class="alert alert-info">
                        <h5 class="alert-heading">
                            <i class="bi bi-shop"></i> Shop Information
                        </h5>
                        <hr>
                        <p class="mb-1"><strong>Shop Name:</strong> @Model.ShopName</p>
                        <p class="mb-1"><strong>Address:</strong> @Model.ShopAddress</p>
                        <p class="mb-0"><strong>Phone:</strong> @Model.ShopPhone</p>
                    </div>

                    <!-- Customer Information -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-person-circle"></i> Your Information
                            </h6>
                            <p class="mb-1"><strong>Name:</strong> @Model.FullName</p>
                            <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
                            <p class="mb-0"><strong>Phone:</strong> @Model.PhoneNumber</p>
                        </div>
                    </div>

                    <!-- Confirmation Message -->
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Confirm Registration</strong>
                        <p class="mb-0 mt-2">
                            Do you want to register your account with <strong>@Model.ShopName</strong>? 
                            This will allow you to make purchases and track your credit (Baki) with this shop.
                        </p>
                    </div>

                    <!-- Action Buttons -->
                    <form asp-action="LinkShop" method="post">
                        <input type="hidden" asp-for="ShopId" />
                        @Html.AntiForgeryToken()
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Yes, Register Me
                            </button>
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Benefits Section -->
            <div class="card mt-4">
                <div class="card-body">
                    <h6 class="card-title text-primary">
                        <i class="bi bi-star-fill"></i> Benefits of Registration
                    </h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            Make quick purchases at the shop
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            Track your credit (Baki) transactions
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            Receive monthly invoices via email
                        </li>
                        <li class="mb-0">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            View your purchase history anytime
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
