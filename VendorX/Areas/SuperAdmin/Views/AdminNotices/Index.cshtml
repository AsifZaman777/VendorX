@using VendorX.ViewModels
@model List<AdminNoticeViewModel>

@{
    ViewData["Title"] = "Admin Notices";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="bi bi-megaphone"></i> Admin Notices
    </h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createNoticeModal">
        <i class="bi bi-plus-circle"></i> Create Notice
    </button>
</div>

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-left-primary shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Notices</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-megaphone fs-2 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-left-success shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Notices</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(n => n.IsActive)</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-check-circle fs-2 text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-left-warning shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">For ShopKeepers</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(n => n.TargetRole == "ShopKeeper")</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-shop fs-2 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-left-info shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">For Customers</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(n => n.TargetRole == "Customer")</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people fs-2 text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-header">
        <i class="bi bi-list"></i> All Notices
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> No notices found. Create the first notice.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table id="noticesTable" class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Message</th>
                            <th>Type</th>
                            <th>Target</th>
                            <th>Created</th>
                            <th>Expires</th>
                            <th>Status</th>
                            <th width="150">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var notice in Model)
                        {
                            <tr>
                                <td><strong>@notice.Title</strong></td>
                                <td>@(notice.Message.Length > 50 ? notice.Message.Substring(0, 50) + "..." : notice.Message)</td>
                                <td>
                                    @switch (notice.NoticeType)
                                    {
                                        case "Info":
                                            <span class="badge bg-info">Info</span>
                                            break;
                                        case "Warning":
                                            <span class="badge bg-warning">Warning</span>
                                            break;
                                        case "Danger":
                                            <span class="badge bg-danger">Danger</span>
                                            break;
                                        case "Success":
                                            <span class="badge bg-success">Success</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(notice.TargetRole))
                                    {
                                        <span class="badge bg-secondary">All Users</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">@notice.TargetRole</span>
                                    }
                                </td>
                                <td>@notice.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>@(notice.ExpiresAt?.ToString("MMM dd, yyyy") ?? "Never")</td>
                                <td>
                                    @if (notice.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-warning" onclick="editNotice(@notice.NoticeId, '@Html.Raw(notice.Title.Replace("'", "\\'"))', '@Html.Raw(notice.Message.Replace("'", "\\'").Replace("\n", "\\n").Replace("\r", ""))', '@notice.NoticeType', '@notice.TargetRole', '@notice.ExpiresAt?.ToString("yyyy-MM-dd")', @notice.IsActive.ToString().ToLower())">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <form asp-action="ToggleStatus" asp-route-id="@notice.NoticeId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-@(notice.IsActive ? "secondary" : "success")">
                                                <i class="bi bi-@(notice.IsActive ? "pause" : "play")"></i>
                                            </button>
                                        </form>
                                        <form asp-action="Delete" asp-route-id="@notice.NoticeId" method="post" class="d-inline" onsubmit="return confirmDelete(event, '@Html.Raw(notice.Title.Replace("'", "\\'"))');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Create Notice Modal -->
<div class="modal fade" id="createNoticeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-megaphone"></i> Create Admin Notice
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Title" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="Title" name="Title" required maxlength="200" />
                    </div>
                    <div class="mb-3">
                        <label for="Message" class="form-label">Message *</label>
                        <textarea class="form-control" id="Message" name="Message" rows="4" required maxlength="1000"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="NoticeType" class="form-label">Notice Type *</label>
                                <select class="form-select" id="NoticeType" name="NoticeType" required>
                                    <option value="Info">Info</option>
                                    <option value="Warning">Warning</option>
                                    <option value="Danger">Danger</option>
                                    <option value="Success">Success</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="TargetRole" class="form-label">Target Audience</label>
                                <select class="form-select" id="TargetRole" name="TargetRole">
                                    <option value="">All Users</option>
                                    <option value="ShopKeeper">ShopKeepers Only</option>
                                    <option value="Customer">Customers Only</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="ExpiresAt" class="form-label">Expires At (Optional)</label>
                        <input type="date" class="form-control" id="ExpiresAt" name="ExpiresAt" />
                        <small class="text-muted">Leave empty for no expiration</small>
                    </div>
                    <div class="form-check mb-3">
                        <input type="hidden" name="IsActive" value="false" />
                        <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" value="true" checked />
                        <label class="form-check-label" for="IsActive">
                            Active (Show to users immediately)
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Notice
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Notice Modal -->
<div class="modal fade" id="editNoticeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-pencil-square"></i> Edit Admin Notice
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Edit" method="post">
                <input type="hidden" id="editNoticeId" name="NoticeId" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editTitle" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="editTitle" name="Title" required maxlength="200" />
                    </div>
                    <div class="mb-3">
                        <label for="editMessage" class="form-label">Message *</label>
                        <textarea class="form-control" id="editMessage" name="Message" rows="4" required maxlength="1000"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editNoticeType" class="form-label">Notice Type *</label>
                                <select class="form-select" id="editNoticeType" name="NoticeType" required>
                                    <option value="Info">Info</option>
                                    <option value="Warning">Warning</option>
                                    <option value="Danger">Danger</option>
                                    <option value="Success">Success</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editTargetRole" class="form-label">Target Audience</label>
                                <select class="form-select" id="editTargetRole" name="TargetRole">
                                    <option value="">All Users</option>
                                    <option value="ShopKeeper">ShopKeepers Only</option>
                                    <option value="Customer">Customers Only</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editExpiresAt" class="form-label">Expires At (Optional)</label>
                        <input type="date" class="form-control" id="editExpiresAt" name="ExpiresAt" />
                        <small class="text-muted">Leave empty for no expiration</small>
                    </div>
                    <div class="form-check mb-3">
                        <input type="hidden" name="IsActive" value="false" />
                        <input class="form-check-input" type="checkbox" id="editIsActive" name="IsActive" value="true" />
                        <label class="form-check-label" for="editIsActive">
                            Active
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#noticesTable').DataTable({
                order: [[4, 'desc']],
                columnDefs: [
                    { orderable: false, targets: [7] }
                ]
            });
        });

        function editNotice(id, title, message, type, targetRole, expiresAt, isActive) {
            $('#editNoticeId').val(id);
            $('#editTitle').val(title);
            $('#editMessage').val(message);
            $('#editNoticeType').val(type);
            $('#editTargetRole').val(targetRole || '');
            $('#editExpiresAt').val(expiresAt || '');
            $('#editIsActive').prop('checked', isActive);
            
            var editModal = new bootstrap.Modal(document.getElementById('editNoticeModal'));
            editModal.show();
        }

        function confirmDelete(event, title) {
            event.preventDefault();
            Swal.fire({
                title: 'Delete Notice?',
                html: 'Are you sure you want to delete <strong>"' + title + '"</strong>?<br><small class="text-muted">This action cannot be undone.</small>',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    event.target.submit();
                }
            });
            return false;
        }
    </script>
}
