@model CustomerViewModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-person-badge"></i> Customer Details</h3>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-light btn-sm me-2">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>
        <div class="card-body">
            <h5>Personal Information</h5>
            <dl class="row">
                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Phone Number:</dt>
                <dd class="col-sm-9">@(Model.PhoneNumber ?? "Not provided")</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@(Model.Email ?? "Not provided")</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@(Model.Address ?? "Not provided")</dd>
            </dl>
        </div>
    </div>
</div>
