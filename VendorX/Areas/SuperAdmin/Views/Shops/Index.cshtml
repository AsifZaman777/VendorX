@using VendorX.ViewModels
@model List<ShopViewModel>

@{
    ViewData["Title"] = "Manage Shops";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="bi bi-shop"></i> All Shops
    </h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createShopModal">
        <i class="bi bi-plus-circle"></i> New Shop
    </button>
</div>

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-left-success shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Shops</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-shop fs-2 text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-primary shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Active Shops</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(s => s.IsActive)</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-check-circle fs-2 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-secondary shadow">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">Inactive Shops</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(s => !s.IsActive)</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-x-circle fs-2 text-secondary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-header">
        <i class="bi bi-list-ul"></i> All Shops
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> No shops found. Create the first shop.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table id="shopsTable" class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Shop Name</th>
                            <th>Shop Code</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th width="150">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var shop in Model)
                        {
                            <tr>
                                <td><strong>@shop.ShopName</strong></td>
                                <td><span class="badge bg-primary">@shop.ShopCode</span></td>
                                <td>@(shop.Address ?? "N/A")</td>
                                <td>@(shop.PhoneNumber ?? "N/A")</td>
                                <td>@(shop.Email ?? "N/A")</td>
                                <td>
                                    @if (shop.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@shop.ShopId" class="btn btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-warning" onclick="editShop(@shop.ShopId, '@Html.Raw(shop.ShopName)', '@Html.Raw(shop.Address?.Replace("\n", "\\n") ?? "")', '@shop.PhoneNumber', '@shop.Email', @shop.IsActive.ToString().ToLower())">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <form asp-action="Delete" asp-route-id="@shop.ShopId" method="post" class="d-inline" onsubmit="return confirmDelete(event, '@shop.ShopName');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Create Shop Modal -->
<div class="modal fade" id="createShopModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-shop"></i> Create New Shop
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="ShopName" class="form-label">Shop Name *</label>
                        <input type="text" class="form-control" id="ShopName" name="ShopName" required />
                    </div>
                    <div class="mb-3">
                        <label for="Address" class="form-label">Address</label>
                        <textarea class="form-control" id="Address" name="Address" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="PhoneNumber" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" />
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> <strong>Note:</strong> Shop Code and QR Code will be generated automatically.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Shop
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Shop Modal -->
<div class="modal fade" id="editShopModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-pencil-square"></i> Edit Shop
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Edit" method="post">
                <input type="hidden" id="editShopId" name="ShopId" />
                <input type="hidden" id="editQRCode" name="QRCode" />
                <input type="hidden" id="editShopCode" name="ShopCode" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Shop Code</label>
                        <input type="text" class="form-control-plaintext" id="editShopCodeDisplay" readonly />
                        <small class="text-muted">This code is used for customer registration</small>
                    </div>
                    <div class="mb-3">
                        <label for="editShopName" class="form-label">Shop Name *</label>
                        <input type="text" class="form-control" id="editShopName" name="ShopName" required />
                    </div>
                    <div class="mb-3">
                        <label for="editAddress" class="form-label">Address</label>
                        <textarea class="form-control" id="editAddress" name="Address" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editPhoneNumber" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="editPhoneNumber" name="PhoneNumber" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="editEmail" name="Email" />
                            </div>
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="editIsActive" name="IsActive" />
                        <label class="form-check-label" for="editIsActive">
                            Active
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#shopsTable').DataTable({
                order: [[0, 'asc']],
                columnDefs: [
                    { orderable: false, targets: [6] }
                ]
            });
        });

        function editShop(id, name, address, phone, email, isActive) {
            // Get shop code from the table
            var shopCode = $('tr').find(`button[onclick*="${id}"]`).closest('tr').find('.badge').text().trim();
            
            $('#editShopId').val(id);
            $('#editShopCode').val(shopCode);
            $('#editShopCodeDisplay').val(shopCode);
            $('#editShopName').val(name);
            $('#editAddress').val(address);
            $('#editPhoneNumber').val(phone);
            $('#editEmail').val(email);
            $('#editIsActive').prop('checked', isActive);
            
            var editModal = new bootstrap.Modal(document.getElementById('editShopModal'));
            editModal.show();
        }

        function confirmDelete(event, shopName) {
            event.preventDefault();
            Swal.fire({
                title: 'Delete Shop?',
                html: `Are you sure you want to delete <strong>"${shopName}"</strong>?<br><small class="text-muted">This action cannot be undone.</small>`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    event.target.submit();
                }
            });
            return false;
        }
    </script>
}
