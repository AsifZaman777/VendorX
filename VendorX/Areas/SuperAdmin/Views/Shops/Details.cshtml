@model ShopViewModel

@{
    ViewData["Title"] = "Shop Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="bi bi-shop"></i> Shop Details</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.ShopId" class="btn btn-light btn-sm me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5>Shop Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Shop Code:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary fs-6">@Model.ShopCode</span>
                                </dd>

                                <dt class="col-sm-4">Shop Name:</dt>
                                <dd class="col-sm-8">@Model.ShopName</dd>

                                <dt class="col-sm-4">Address:</dt>
                                <dd class="col-sm-8">@(Model.Address ?? "Not specified")</dd>

                                <dt class="col-sm-4">Phone Number:</dt>
                                <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not specified")</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@(Model.Email ?? "Not specified")</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.QRCode))
                            {
                                <div class="text-center">
                                    <h5>Shop QR Code</h5>
                                    <img src="@Model.QRCode" alt="Shop QR Code" class="img-thumbnail" style="max-width: 250px;" />
                                    <p class="text-muted mt-2 small">Customers can scan this QR code to register</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
