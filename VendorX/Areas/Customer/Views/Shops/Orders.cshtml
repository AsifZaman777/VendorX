@using VendorX.Models
@using VendorX.Models.Enums
@model List<Order>

@{
    ViewData["Title"] = "My Orders";
    var shopName = ViewBag.ShopName as string;
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-bag-check"></i> My Orders from @shopName</h3>
            <a asp-action="Index" class="btn btn-dark btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No orders found at this shop.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Order #</th>
                                <th>Order Date</th>
                                <th>Delivery Date</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Items</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td><strong>@order.OrderNumber</strong></td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    <td>@(order.DeliveryDate?.ToString("MMM dd, yyyy") ?? "Not delivered")</td>
                                    <td><span class="badge bg-primary">@order.TotalAmount</span></td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case OrderStatus.Pending:
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case OrderStatus.Delivered:
                                                <span class="badge bg-success">Delivered</span>
                                                break;
                                            case OrderStatus.Cancelled:
                                                <span class="badge bg-danger">Cancelled</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="collapse" data-bs-target="#order-@order.OrderId">
                                            <i class="bi bi-eye"></i> View (@order.OrderItems?.Count ?? 0)
                                        </button>
                                    </td>
                                </tr>
                                @if (order.OrderItems != null && order.OrderItems.Any())
                                {
                                    <tr class="collapse" id="order-@order.OrderId">
                                        <td colspan="6">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">Order Items</h6>
                                                    <table class="table table-sm table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>Product</th>
                                                                <th>Quantity</th>
                                                                <th>Unit Price</th>
                                                                <th>Total</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in order.OrderItems)
                                                            {
                                                                <tr>
                                                                    <td>@item.Product?.ProductName</td>
                                                                    <td>@item.Quantity</td>
                                                                    <td>@item.UnitPrice</td>
                                                                    <td>@item.TotalPrice:F2</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                    @if (!string.IsNullOrEmpty(order.Notes))
                                                    {
                                                        <p class="mb-0"><strong>Notes:</strong> @order.Notes</p>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
