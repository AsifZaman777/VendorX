@using VendorX.Models
@model List<POSTransaction>

@{
    ViewData["Title"] = "My Purchases";
    var shopName = ViewBag.ShopName as string;
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-cart-check"></i> My Purchases from @shopName</h3>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No purchases found at this shop.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Transaction #</th>
                                <th>Date</th>
                                <th>Total Amount</th>
                                <th>Amount Paid</th>
                                <th>Amount Due</th>
                                <th>Type</th>
                                <th>Items</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model)
                            {
                                <tr>
                                    <td><strong>@transaction.TransactionNumber</strong></td>
                                    <td>@transaction.TransactionDate.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge bg-primary">${transaction.TotalAmount:F2}</span></td>
                                    <td><span class="badge bg-success">${transaction.AmountPaid:F2}</span></td>
                                    <td>
                                        @if (transaction.AmountDue > 0)
                                        {
                                            <span class="badge bg-danger">$@transaction.AmountDue.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">$0.00</span>
                                        }
                                    </td>
                                    <td>
                                        @if (transaction.IsCredit)
                                        {
                                            <span class="badge bg-warning text-dark">Credit</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Cash</span>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="collapse" data-bs-target="#items-@transaction.POSTransactionId">
                                            <i class="bi bi-eye"></i> View (@transaction.POSTransactionItems?.Count ?? 0)
                                        </button>
                                    </td>
                                </tr>
                                @if (transaction.POSTransactionItems != null && transaction.POSTransactionItems.Any())
                                {
                                    <tr class="collapse" id="items-@transaction.POSTransactionId">
                                        <td colspan="7">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">Purchase Items</h6>
                                                    <table class="table table-sm table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>Product</th>
                                                                <th>Quantity</th>
                                                                <th>Unit Price</th>
                                                                <th>Total</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in transaction.POSTransactionItems)
                                                            {
                                                                <tr>
                                                                    <td>@item.Product?.ProductName</td>
                                                                    <td>@item.Quantity</td>
                                                                    <td>$@item.UnitPrice.ToString("F2")</td>
                                                                    <td>$@item.TotalPrice.ToString("F2")</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
