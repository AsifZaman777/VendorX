@{
    ViewData["Title"] = "Baki Summary";
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="bi bi-graph-up"></i> Baki Summary by Shop</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> This page shows your total baki (credit) amounts grouped by each shop.
            </div>

            <div class="row">
                <div class="col-md-12">
                    @* Summary cards would go here if model is passed *@
                    <p class="text-muted">View your complete baki history by shop in the <a asp-action="History">History</a> page.</p>
                    
                    <div class="d-grid gap-2">
                        <a asp-action="History" class="btn btn-primary">
                            <i class="bi bi-clock-history"></i> View Full History
                        </a>
                        <a asp-action="Alerts" class="btn btn-warning">
                            <i class="bi bi-bell"></i> View Invoices & Alerts
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
