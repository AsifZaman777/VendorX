@model CustomerViewModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-person-badge"></i> Customer Details</h3>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-light btn-sm me-2">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Personal Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not provided")</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@(Model.Email ?? "Not provided")</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@(Model.Address ?? "Not provided")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5>Financial Summary</h5>
                    <dl class="row">
                        <dt class="col-sm-6">Total Outstanding Baki:</dt>
                        <dd class="col-sm-6">
                            @if (Model.TotalBakiAmount > 0)
                            {
                                <span class="badge bg-danger fs-5">${Model.TotalBakiAmount:F2}</span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-5">$0.00</span>
                            }
                        </dd>
                    </dl>

                    <div class="mt-3">
                        <a asp-controller="Baki" asp-action="CustomerBaki" asp-route-customerId="@Model.CustomerId" class="btn btn-warning">
                            <i class="bi bi-wallet2"></i> View Baki History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
