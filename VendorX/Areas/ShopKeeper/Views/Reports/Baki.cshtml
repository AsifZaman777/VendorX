@model BakiReportViewModel

@{
    ViewData["Title"] = "Baki Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="bi bi-wallet2"></i> Baki (Credit) Report
    </h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Reports
    </a>
</div>

<!-- Date Range Selector -->
<div class="card shadow mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label fw-bold">From Date</label>
                <input type="date" name="fromDate" class="form-control" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">To Date</label>
                <input type="date" name="toDate" class="form-control" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Generate Report
                </button>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <div class="alert alert-info mb-0 w-100">
                    <strong>Period:</strong> @Model.FromDate.ToString("MMM dd, yyyy") to @Model.ToDate.ToString("MMM dd, yyyy")
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-left-danger shadow h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Total Outstanding</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.TotalDue.ToString("F2")</div>
                        <small class="text-muted">Amount Due</small>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-exclamation-triangle fs-2 text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-left-success shadow h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Settled</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.TotalSettled.ToString("F2")</div>
                        <small class="text-muted">Amount Paid</small>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-check-circle fs-2 text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-left-info shadow h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Total Amount</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">$@(Model.TotalDue + Model.TotalSettled)</div>
                        <small class="text-muted">Overall</small>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-currency-dollar fs-2 text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-3 mb-4">
    <div class="col-lg-6">
        <div class="card shadow h-100">
            <div class="card-header">
                <i class="bi bi-pie-chart"></i> Due vs Settled
            </div>
            <div class="card-body">
                <div id="bakiStatusChart"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow h-100">
            <div class="card-header">
                <i class="bi bi-bar-chart"></i> Top 10 Customers by Outstanding Amount
            </div>
            <div class="card-body">
                <div id="topCustomersChart"></div>
            </div>
        </div>
    </div>
</div>

<!-- Customer Baki Breakdown -->
<div class="card shadow">
    <div class="card-header">
        <i class="bi bi-people"></i> Baki by Customer
    </div>
    <div class="card-body">
        @if (Model.CustomerBakis != null && Model.CustomerBakis.Any())
        {
            <div class="table-responsive">
                <table id="customerBakiTable" class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Due Amount</th>
                            <th>Settled Amount</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customerBaki in Model.CustomerBakis)
                        {
                            <tr>
                                <td><strong>@customerBaki.CustomerName</strong></td>
                                <td>
                                    @if (customerBaki.DueAmount > 0)
                                    {
                                        <span class="badge bg-danger">$@customerBaki.DueAmount.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">$0.00</span>
                                    }
                                </td>
                                <td><span class="badge bg-success">$@customerBaki.SettledAmount.ToString("F2")</span></td>
                                <td><span class="badge bg-info">$@customerBaki.TotalAmount.ToString("F2")</span></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light fw-bold">
                            <td>TOTAL</td>
                            <td><span class="badge bg-danger">$@Model.TotalDue.ToString("F2")</span></td>
                            <td><span class="badge bg-success">$@Model.TotalSettled.ToString("F2")</span></td>
                            <td><span class="badge bg-info">$@(Model.TotalDue + Model.TotalSettled)</span></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i> No baki records found for this period. All clear!
            </div>
        }
    </div>
</div>

<style>
    .border-left-success {
        border-left: 4px solid #1cc88a !important;
    }
    .border-left-danger {
        border-left: 4px solid #e74a3b !important;
    }
    .border-left-info {
        border-left: 4px solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 4px solid #f6c23e !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            if ($.fn.DataTable.isDataTable('#customerBakiTable')) {
                $('#customerBakiTable').DataTable().destroy();
            }
            $('#customerBakiTable').DataTable({
                order: [[1, 'desc']],
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]]
            });

            // Baki Status Chart (Pie)
            Highcharts.chart('bakiStatusChart', {
                chart: {
                    type: 'pie',
                    height: 300
                },
                title: {
                    text: 'Outstanding vs Settled'
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            format: '<b>{point.name}</b>: ${point.y:.2f}'
                        },
                        showInLegend: true
                    }
                },
                series: [{
                    name: 'Amount',
                    colorByPoint: true,
                    data: [{
                        name: 'Due',
                        y: @Model.TotalDue,
                        color: '#e74a3b'
                    }, {
                        name: 'Settled',
                        y: @Model.TotalSettled,
                        color: '#1cc88a'
                    }]
                }],
                credits: {
                    enabled: false
                }
            });

            // Top Customers Chart (Horizontal Bar)
            var topCustomers = @Html.Raw(Json.Serialize(Model.CustomerBakis.OrderByDescending(c => c.DueAmount).Take(10).Select(c => c.CustomerName).ToList()));
            var topAmounts = @Html.Raw(Json.Serialize(Model.CustomerBakis.OrderByDescending(c => c.DueAmount).Take(10).Select(c => c.DueAmount).ToList()));

            Highcharts.chart('topCustomersChart', {
                chart: {
                    type: 'bar',
                    height: 300
                },
                title: {
                    text: 'Top 10 Customers by Outstanding'
                },
                xAxis: {
                    categories: topCustomers,
                    title: {
                        text: null
                    }
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'Outstanding Amount ($)',
                        align: 'high'
                    },
                    labels: {
                        formatter: function() {
                            return '$' + this.value.toLocaleString();
                        }
                    }
                },
                legend: {
                    enabled: false
                },
                plotOptions: {
                    bar: {
                        dataLabels: {
                            enabled: true,
                            formatter: function() {
                                return '$' + this.y.toLocaleString();
                            }
                        },
                        color: '#e74a3b'
                    }
                },
                series: [{
                    name: 'Outstanding Amount',
                    data: topAmounts
                }],
                credits: {
                    enabled: false
                }
            });
        });
    </script>
}
