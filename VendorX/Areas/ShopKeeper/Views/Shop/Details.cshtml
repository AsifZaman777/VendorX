@model ShopViewModel

@{
    ViewData["Title"] = "Shop Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="bi bi-shop"></i> Shop Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Shop Code</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary fs-6">@Model.ShopCode</span>
                        </dd>

                        <dt class="col-sm-4">Shop Name</dt>
                        <dd class="col-sm-8">@Model.ShopName</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@(Model.Address ?? "Not specified")</dd>

                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not specified")</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@(Model.Email ?? "Not specified")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.QRCode))
                    {
                        <div class="text-center my-4">
                            <h5>Shop QR Code</h5>
                            <img src="@Model.QRCode" alt="Shop QR Code" class="img-thumbnail" style="max-width: 250px;" />
                            <p class="text-muted mt-2">Customers can scan this QR code to register with your shop</p>
                        </div>
                    }

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Edit" class="btn btn-warning btn-lg">
                            <i class="bi bi-pencil-square"></i> Edit Shop
                        </a>
                        <a asp-area="ShopKeeper" asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
